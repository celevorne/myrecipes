<p id="notice"><%= notice %></p>

<div class="title">My Recipes</div>

    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div class="destroy"><%= link_to image_tag("ic_cancel.png"), recipe, method: :delete, data: { confirm: 'Are you sure?' } %></div>

        <div class="name"><%= link_to recipe.name, recipe %></div>
      </div>
    <% end %>

